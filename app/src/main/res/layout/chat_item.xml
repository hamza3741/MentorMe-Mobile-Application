<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="MissingConstraints,MissingDefaultResource">
        <RelativeLayout
            android:id="@+id/lin7"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#C1DBDF"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_marginStart="20dp"
                android:id="@+id/image_profile7"
                android:layout_width="50dp"
                app:tint="#E44715"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/profile"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/lin8"
                android:layout_width="150dp"
                android:layout_toRightOf="@+id/image_profile7"
                android:layout_height="60dp"
                android:background="#C1DBDF"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:text="Jack Watson"
                    android:textColor="#2196F3"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textmsg2"
                    android:layout_below="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="20dp"
                    android:text="No New Messages"
                    android:textColor="#707171"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <View
                android:layout_below="@+id/lin8"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>